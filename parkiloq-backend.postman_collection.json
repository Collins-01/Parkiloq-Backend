{
  "info": {
    "_postman_id": "parkiloq-backend-collection-001",
    "name": "Parkiloq Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API documentation for Parkiloq backend. Import into Postman to explore and test endpoints."
  },
  "item": [
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"spotId\": \"{{spotId}}\",\n  \"startTime\": \"2025-07-22T10:00:00Z\",\n  \"endTime\": \"2025-07-22T12:00:00Z\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/bookings",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "bookings"]
            }
          },
          "response": []
        },
        {
          "name": "Get Bookings by User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3000/api/bookings?userId={{userId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "bookings"],
              "query": [
                { "key": "userId", "value": "{{userId}}" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/bookings/cancel/{{bookingId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "bookings", "cancel", "{{bookingId}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Stripe Checkout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookingId\": \"{{bookingId}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/payments/stripe/checkout",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "payments", "stripe", "checkout"]
            }
          },
          "response": []
        },
        {
          "name": "Stripe Webhook",
          "request": {
